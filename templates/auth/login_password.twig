{% extends "/auth/layout.twig" %}

{% block content_area %}

<div
    class="flex flex-col justify-center align-middle items-start space-y-3
        w-full py-12">

    <h1 class="font-bold text-3xl text-stone-100">Log in</h1>
    <p class="text-sm text-stone-300">
        Don't have an account? <a class="text-blue-500 underline" href="#">Request an account here</a>
    </p>
</div>

<form
    id="authForm"
    class="flex flex-col justify-center align-middle items-start space-y-6
        w-full pt-6 pb-12
        border-y border-stone-700">

    <div class="w-full space-y-1.5">
        <label class="font-semibold text-sm text-stone-100" for="username">Username</label>
        <input class="w-full p-3 text-sm text-white border-x-transparent border-t-transparent border-b bg-stone-700" type="text" name="username" id="username">
    </div>

    <div class="w-full space-y-1.5">
        <label class="font-semibold text-sm text-stone-100" for="password">Password</label>
        <input class="w-full p-3 text-sm text-white border-x-transparent border-t-transparent border-b bg-stone-700" type="password" name="password" id="password">
    </div>

    <button
        id="authFormBtn"
        hx-post="/login"
        hx-include="#authForm"
        class="flex flex-row justify-between align-middle items-center space-x-3
            w-full my-3 p-3 bg-blue-600 hover:bg-blue-500">

        <p class="font-medium text-white">Continue</p>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#f7f7f7" viewBox="0 0 256 256"><path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path></svg>
                
    </button>

    <div class="w-full py-3 flex flex-row justify-start align-middle items-center space-x-3">
        <input type="checkbox" name="remember_me" id="">
        <label class="font-semibold text-sm text-stone-100" for="remember_me">Remember Me</label>
    </div>
</form>

{% endblock %}