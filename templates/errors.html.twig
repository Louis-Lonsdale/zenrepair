{% if errors|length > 0 %}
    <div _="on load wait 3s then remove me" class="absolute top-0 left-0 w-full">
    <div class="px-4 py-2 flex flex-row justify-center align-middle items-center">
        {% for fields in errors %}
            {% for key, message in fields %}
            <div class="mx-4 px-6 py-2 flex flex-row items-center border border-red-700 bg-red-200">
                <svg class="h-6 w-6 text-red-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"></path>
                </svg>
                <h1 class="ml-4 font-medium text-sm text-red-700">{{ message }}</h1>
            </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endif %}
