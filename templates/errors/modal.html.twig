{% if errors|length > 0 %}

<!-- Errors Modal -->
<div id="modal-errors" _="on closeModal remove me" class="absolute top-0 left-0 z-50 flex flex-col justify-start align-middle items-center h-full w-full">
    <div _="on click trigger closeModal" class="absolute top-0 left-0 -z-10 h-full w-full bg-black/50"></div>
    <div class="h-24"></div>
    <div class="w-1/3 shadow-sm rounded-md border border-red-300 bg-white">
        <div class="px-4 py-2 flex flex-row justify-start items-center rounded-tl-md rounded-tr-md text-red-700 border-b border-red-300 bg-red-200">
            <img src="{{ globals.icons_url }}/png/warning-circle-duotone.png" class="mr-4 h-5">

            <h2 class="font-medium text-xs">Error</h2>
        </div>

        <div class="px-8 py-2">
        {% for fields in errors %}
            {% for key, message in fields %}
                <ul class="list-disc text-sm text-stone-700">
                    <li class="py-1.5">{{ message }}</li>
                </ul>
            {% endfor %}
        {% endfor %}
        </div>

        <div class="px-4 py-1.5 flex flex-row justify-center items-center text-stone-500">
            <button _="on click trigger closeModal" hx-delete="{{ globals.base_url }}/errors/clear" hx-trigger="click" hx-swap="none" class="mr-4 px-4 py-2 inline-flex flex-row items-center font-medium text-sm text-stone-500 hover:text-stone-700 rounded-md hover:bg-stone-200">
                <img src="{{ globals.icons_url }}/png/check-duotone.png" class="mr-4 h-5">
                Ok
            </button>
        </div>
    </div>
</div>
{% endif %}