<div class="row-start-0 row-span-full col-start-0 col-span-1 px-6 py-2 flex flex-col justify-start align-middle items-start border-r border-sky-500 bg-gradient-to-tl from-sky-600 to-sky-500">

    <div class="w-full mt-4 mb-8 py-2 flex flex-col justify-start items-center">
        <div class="w-full flex flex-row items-center">

            <div class="h-10 w-10 mr-4 inline-flex flex-col justify-center items-center font-bold text-sm text-sky-500 shadow-md rounded-md bg-white">{{ user.info.first_name|first }}{{ user.info.last_name|first }}</div>
            <h3 class="font-bold text-md text-white">{{ user.info.first_name }} {{ user.info.last_name }}</h3>

            <div class="flex-grow"></div>

            <button _="on click toggle .hidden on #user_actions" class="p-2 text-white hover:text-stone-500">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M11.47 4.72a.75.75 0 011.06 0l3.75 3.75a.75.75 0 01-1.06 1.06L12 6.31 8.78 9.53a.75.75 0 01-1.06-1.06l3.75-3.75zm-3.75 9.75a.75.75 0 011.06 0L12 17.69l3.22-3.22a.75.75 0 111.06 1.06l-3.75 3.75a.75.75 0 01-1.06 0l-3.75-3.75a.75.75 0 010-1.06z"></path>
                </svg>
            </button>

        </div>

        <div id="user_actions" class="hidden z-50 relative top-6 w-full">
            <div class="w-full shadow-sm border border-stone-300 bg-white">
                <a href="{{ globals.base_url }}/workshop/settings" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-xs text-stone-500 hover:text-stone-500 hover:underline hover:bg-stone-100">
                    <img src="{{ globals.icons_url }}/png/user-gear-duotone.png" class="mr-4 h-5">
                    {{ user.info.first_name }}'s Settings
                </a>
                <a href="{{ globals.base_url }}/logout" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-xs text-stone-500 hover:text-red-500 hover:underline hover:bg-stone-100">
                    <img src="{{ globals.icons_url }}/png/sign-out-duotone.png" class="mr-4 h-5">
                    Sign out
                </a>
            </div>
        </div>

    </div>

    <div class="w-full mb-8 shadow-md rounded-md border border-stone-300 bg-white">
        <div class="w-full px-4 py-1.5 rounded-tl-md rounded-tr-md border-b border-stone-300 bg-gradient-to-r from-stone-200 to-stone-100">
            <h4 class="font-medium text-xs text-stone-700">Workshop</h4>
        </div>
        <a href="{{ globals.base_url }}/workshop/dashboard" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/svg/presentation-chart-duotone.svg" class="mr-4 h-5">
            Dashboard
        </a>
        <a href="{{ globals.base_url }}/workshop/tickets" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/png/ticket-duotone.png" class="mr-4 h-5">
            Tickets
        </a>
        <a href="{{ globals.base_url }}/workshop/customers" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/png/users-three-duotone.png" class="mr-4 h-5">
            Customers
        </a>
        <a href="{{ globals.base_url }}/workshop/devices" class="inline-flex flex-row items-center w-full px-4 py-2.5 rounded-bl-md rounded-br-md font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/png/devices-duotone.png" class="mr-4 h-5">
            Devices
        </a>
    </div>

    {% if user.level == 0 %}
    
    <div class="w-full mb-8 shadow-md rounded-md border border-stone-300 bg-white">
        <div class="w-full px-4 py-1.5 flex flex-row justify-between items-center rounded-tl-md rounded-tr-md border-b border-stone-300 bg-gradient-to-r from-stone-200 to-stone-100">
            <h4 class="font-medium text-xs text-stone-700">Administration</h4>
        </div>
        <a href="{{ globals.base_url }}/admin/users" class="inline-flex flex-row items-center w-full px-4 py-2.5 font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/png/folder-user-duotone.png" class="mr-4 h-5">
            Users
        </a>
        <a href="{{ globals.base_url }}/admin/settings" class="inline-flex flex-row items-center w-full px-4 py-2.5 rounded-bl-md rounded-br-md font-medium text-sm text-stone-700 hover:underline hover:bg-stone-100">
            <img src="{{ globals.icons_url }}/png/gear-six-duotone.png" class="mr-4 h-5">
            Application Settings
        </a>
    </div>

    {% endif %}
</div>