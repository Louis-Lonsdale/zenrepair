{% extends "/layouts/base.twig" %}

{% block content %}
<div
    class="row-start-1 row-end-4 col-start-1 col-span-full
        flex flex-col justify-center align-middle items-center w-full h-full">

    <div
        class="flex flex-col justify-center align-middle items-center space-y-6 p-6
            rounded-sm border border-stone-700 bg-stone-800">

        <div
            class="space-y-3 w-full">

            <h1 class="font-bold text-3xl text-stone-100">Log in</h1>
            <p class="text-sm text-stone-300">
                Don't have an account? <a href="#" class="text-blue-500 hover:underline">Request an account here</a>
            </p>
        </div>

        <form
            id="auth_form"
            class="flex flex-col justify-start align-middle items-center space-y-6 w-full">

            <div
                class="w-full space-y-3">

                <input
                    type="text"
                    name="username"
                    id="username"
                    placeholder="Username"
                    class="w-full
                        text-sm text-stone-100 focus:text-stone-900 border-stone-700 bg-stone-900 focus:bg-stone-100 placeholder:text-stone-300 focus:placeholder:text-stone-700 placeholder:text-sm">
            </div>

            <div
                class="w-full">

                <input
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Password"
                    class="w-full mb-3
                        text-sm text-stone-100 focus:text-stone-900 border-stone-700 bg-stone-900 focus:bg-stone-100 placeholder:text-stone-300 focus:placeholder:text-stone-700 placeholder:text-sm">

                <a href="#" class="text-sm text-blue-500 hover:underline">Forgot your password?</a>
            </div>

            <div
                class="flex flex-row justify-start items-center space-x-3 w-full">

                <input
                    type="checkbox"
                    name="checkbox"
                    id="auth_form_remember"
                    class="border-stone-700 bg-stone-900">
                    
                <p class="text-sm text-stone-300">Remember me for 14 days</p>

            </div>

            <div
                class="w-full">

                <button
                    hx-post="/login"
                    hx-include="#auth_form"
                    class="flex flex-row justify-between items-center w-full p-3 
                         rounded-sm bg-blue-500 hover:bg-blue-700">

                    <p class="font-semibold text-sm text-white">Continue</p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#ffffff" viewBox="0 0 256 256"><path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path></svg>
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}