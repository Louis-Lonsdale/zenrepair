{% extends "/layouts/base.twig" %}

{% block navbar %}
    {% include "/components/navbar_empty.twig" %}
{% endblock %}

{% block content %}
<div
    class="row-start-2 col-start-1 col-end-7 2xl:col-end-5
    flex flex-col justify-center align-middle items-center h-full">

    <div
        class="flex flex-col justify-start align-middle items-center space-y-9 w-full h-full px-12 pt-24
        border-r border-stone-700">

        <div
            class="space-y-3 w-full">

            <h1 class="font-bold text-3xl text-stone-100">Two-Factor Authentication</h1>
            <p class="text-sm text-stone-300">
                Use your registered authenticator app. <a href="#" class="text-blue-500 hover:underline">Having issues?</a>
            </p>
        
        </div>

        <form
            id="auth_form"
            class="flex flex-col justify-start align-middle items-center space-y-6 w-full">

            <div
                class="w-full space-y-3">

                <input
                    type="text"
                    name="auth_form_twofactor"
                    id="auth_form_twofactor"
                    placeholder="Two-Factor Password"
                    class="w-full
                        text-sm text-stone-100 focus:text-stone-900 border-stone-700 bg-stone-900 focus:bg-stone-100 placeholder:text-stone-300 focus:placeholder:text-stone-700 placeholder:text-sm">
            </div>

            <div
                class="w-full">

                <button
                    hx-post="/login"
                    hx-include="#auth_form"
                    class="flex flex-row justify-between items-center w-full p-3 
                         bg-blue-500 hover:bg-blue-700">

                    <p class="font-semibold text-sm text-white">Continue</p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#ffffff" viewBox="0 0 256 256"><path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path></svg>
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}