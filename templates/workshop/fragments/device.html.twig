<div class="w-full flex flex-row justify-start align-middle items-start">
    <div class="w-2/3 flex flex-col items-center">

        <div class="w-full mb-8 shadow-sm border border-stone-300 bg-white">
            <div class="w-full px-4 py-2 border-b border-stone-300 bg-stone-200">
                <h4 class="font-medium text-xs text-stone-700">Device Details</h4>
            </div>

            <div class="px-4 py-2">
                <table class="table-auto w-full">
                    <thead>
                        <th class="w-1/3"></th>
                        <th class="w-2/3"></th>
                    </thead>
                    <tbody>
                        {% for key, data in device.details %}
                            <tr>
                                <td class="py-1 font-medium text-md text-stone-700">{{ key }}</td>
                                <td class="text-md text-stone-900">{{ data }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <div class="w-6"></div>

    <div class="w-1/3 px-4 flex flex-col items-center">

        <div class="w-full mb-8 shadow-sm border border-stone-300 bg-white">
            <div class="w-full px-4 py-2 flex flex-row justify-start items-center border-b border-stone-300 bg-stone-200">
                <svg class="mr-4 h-3 w-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                </svg>
                <a href="{{ owner.link }}" class="font-medium text-xs text-stone-700 hover:underline">Device Owner</a>
            </div>

            <div class="px-4 py-2">
                <table class="table-auto w-full">
                    <thead>
                        <th class="w-1/3"></th>
                        <th class="w-2/3"></th>
                    </thead>
                    <tbody>
                        {% for key, value in owner.details %}
                        <tr>
                            <td class="py-1 font-medium text-sm text-stone-700">{{ key }}</td>
                            <td class="text-sm text-stone-900">{{ value }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>