<?php

use Doctrine\ORM\EntityManagerInterface;
use Doctrine\Migrations\DependencyFactory;
use Symfony\Component\Console\Application;
use App\Support\Settings\SettingsInterface;
use Doctrine\ORM\Tools\Console\ConsoleRunner;
use Doctrine\Migrations\Configuration\Migration\PhpFile;
use Doctrine\Migrations\Configuration\EntityManager\ExistingEntityManager;
use Doctrine\ORM\Tools\Console\EntityManagerProvider\SingleManagerProvider;

$container = require __DIR__ . '/app/bootstrap.php';
$settings = $container->get(SettingsInterface::class);

$em = $container->get(EntityManagerInterface::class);
$dependencyFactory = DependencyFactory::fromEntityManager(
    new PhpFile(__DIR__ . '/app/migrations.php'),
    new ExistingEntityManager($em)
);

$migrationCommands = require __DIR__ . '/app/commands/migrationCommands.php';

$cli = new Application($settings->get('app_name'), $settings->get('app_version'));

ConsoleRunner::addCommands($cli, new SingleManagerProvider($em));

$cli->addCommands($migrationCommands($dependencyFactory));

$cli->run();